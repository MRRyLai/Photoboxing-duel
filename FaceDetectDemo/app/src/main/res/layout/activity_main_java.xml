<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg3"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lay_scores"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/round_texture_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="检测人脸分数"
            android:textStyle="bold"
            android:textColor="#FF6281"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_face_scores"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#00FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp" />

    </LinearLayout>

    <com.example.facedetectdemo.widget.RoundTextureViewJava
        android:id="@+id/round_texture_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.example.facedetectdemo.widget.CircleTextureBorderViewJava
        android:id="@+id/border_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/border_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>